<h6>Dashboard</h6>
<h3>Hey there !! {{fname}}</h3>
<p>Here is your contentx</p>
{{#if helps}}

<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each helps}}
        <tr>
            <td><a href="/helps/{{_id}}">{{title}}</a></td>
            <td>{{formatDate createdAt "%Y%m%dT%H%M%S%z"}}</td>

            <td><span class="dash-status">{{status}}</span></td>
            <td>
                <a href="/helps/edit/{{_id}}" class="btn btn-float">
                    <i class="fas fa-edit"></i>
                </a>

                <form action="/helps/{{_id}}" method="POST" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any stories</p>
{{/if}}

 